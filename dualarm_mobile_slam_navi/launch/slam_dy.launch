<?xml version="1.0"?>
<launch>
  <!-- G-mapping -->
  <node pkg="gmapping" type="slam_gmapping" name="dual_gmapping">
		<param name="base_frame" value="base_footprint"/>
		<param name="map_frame" value="map"/>
		<param name="odom_frame" value="odom"/>
		<param name="map_update_interval" value="1.0"/>
		<param name="maxUrange" value="12.0"/>
		<param name="minimumScore" value="100"/>
		<param name="linearUpdate" value="0.2"/>
		<param name="angularUpdate" value="0.2"/>
		<param name="temporalUpdate" value="0.5"/>
		<param name="delta" value="0.05"/>
		<param name="lskip" value="0"/>
		<param name="particles" value="120"/>
		<param name="sigma" value="0.05"/>
		<param name="kernelSize" value="1"/>
		<param name="lstep" value="0.05"/>
		<param name="astep" value="0.05"/>
		<param name="iterations" value="5"/>
		<param name="lsigma" value="0.075"/>
		<param name="ogain" value="3.0"/>
		<param name="srr" value="0.01"/>
		<param name="srt" value="0.02"/>
		<param name="str" value="0.01"/>
		<param name="stt" value="0.02"/>
		<param name="resampleThreshold" value="0.5"/>
		<param name="xmin" value="-15.0"/>
		<param name="ymin" value="-15.0"/>
		<param name="xmax" value="15.0"/>
		<param name="ymax" value="15.0"/>
		<param name="llsamplerange" value="0.01"/>
		<param name="llsamplestep" value="0.01"/>
		<param name="lasamplerange" value="0.005"/>
		<param name="lasamplestep" value="0.005"/>
  </node>

  <!-- Move_base-->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find dualarm_mobile_slam_navi)/param/costmap_common_params_dy.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find dualarm_mobile_slam_navi)/param/costmap_common_params_dy.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find dualarm_mobile_slam_navi)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find dualarm_mobile_slam_navi)/param/global_costmap_params.yaml" command="load" />
	<rosparam file="$(find dualarm_mobile_slam_navi)/param/teb_local_planner_params_dy.yaml" command="load" />
	  
    <param name="base_global_planner" value="global_planner/GlobalPlanner" />
		<param name="planner_frequency" value="20.0" />
		<param name="planner_patience" value="15.0" />

    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
		<param name="controller_frequency" value="20.0" />
		<param name="controller_patience" value="15.0" />
	<remap from="cmd_vel" to="cmd_vel_fake"/>	
  </node>>

  <!-- Run RViz node (visualization) -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find dualarm_mobile_slam_navi)/rviz/slam_navi.rviz">
  </node>
  
</launch>
